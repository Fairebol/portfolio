---
interface Props {
    Pagenumber: number;
    Name: string;
    href: string;
}

const { Pagenumber, Name, href } = Astro.props;

if (!href) window.location.href = "/"
---

<div class="md:mx-4 relative md:px-0 mx-0 flex justify-center items-center">
    <div class="flex items-center justify-center my-1">
        <a href={href} class="flex-row justify-center text-white cursor-pointer hover:bg-sky-800 focus:ring-4 focus:outline-none focus:ring-[#1da1f2]/50 font-bold rounded-lg px-5 py-3 text-center inline-flex items-center dark:focus:ring-[#1da1f2]/55  hover:shadow-lg transition-all duration-200 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-90 hover:opacity-100">
            <span class="flex font-bold bg-bottom text-md md:text-lg">
                <p class="pr-2 md:pr-2 font-bold text-teal-400 font-mono">0{Pagenumber}.</p>
                {Name}
            </span>
        </a>
    </div>
</div>    

